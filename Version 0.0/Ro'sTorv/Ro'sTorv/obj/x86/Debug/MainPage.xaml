<Page
    x:Class="Ro_sTorv.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Ro_sTorv"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.ColumnDefinitions>
            <!-- Make 12 columns -->
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <!-- Make 10 rows -->
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>

        </Grid.RowDefinitions>

        <TextBlock Grid.Column="5" Grid.ColumnSpan="5" Text="Velkommen til Ro's Torv" FontSize="60" TextAlignment="Center" HorizontalTextAlignment="Center" Width="Auto" Height="Auto"></TextBlock>


        <Border Grid.Row="1" BorderThickness="0,1,5,0" BorderBrush="Black"></Border>
        <Border Grid.Row="2" BorderThickness="0,1,5,0" BorderBrush="Black"></Border>
        <Border Grid.Row="3" BorderThickness="0,1,5,0" BorderBrush="Black"></Border>
        <Border Grid.Row="4" BorderThickness="0,1,5,0" BorderBrush="Black"></Border>
        <Border Grid.Row="5" BorderThickness="0,1,5,0" BorderBrush="Black"></Border>
        <Border Grid.Row="6" BorderThickness="0,1,5,0" BorderBrush="Black"></Border>
        <Border Grid.Row="7" BorderThickness="0,1,5,0" BorderBrush="Black"></Border>
        <Border Grid.Row="8" BorderThickness="0,1,5,0" BorderBrush="Black"></Border>
        <Border Grid.Row="9" BorderThickness="0,1,5,1" BorderBrush="Black"></Border>


        <TextBlock Grid.Row="1" Text="Butikker" FontSize="55" TextAlignment="Center" HorizontalTextAlignment="Center" Width="Auto" Height="Auto"></TextBlock>
        <TextBlock Grid.Row="2" Text="Events" FontSize="55" TextAlignment="Center" HorizontalTextAlignment="Center" Width="Auto" Height="Auto"></TextBlock>
        <TextBlock Grid.Row="3" Text="Biograf" FontSize="55" TextAlignment="Center" HorizontalTextAlignment="Center" Width="Auto" Height="Auto"></TextBlock>
        <TextBlock Grid.Row="4" Text="Parkering" FontSize="55" TextAlignment="Center" HorizontalTextAlignment="Center" Width="Auto" Height="Auto"></TextBlock>
        <TextBlock Grid.Row="5" Text="Test" FontSize="60" TextAlignment="Center" HorizontalTextAlignment="Center" Width="Auto" Height="Auto"></TextBlock>
        <TextBlock Grid.Row="6" Text="Test" FontSize="60" TextAlignment="Center" HorizontalTextAlignment="Center" Width="Auto" Height="Auto"></TextBlock>
        <TextBlock Grid.Row="7" Text="leaderbord" FontSize="60" TextAlignment="Center" HorizontalTextAlignment="Center" Width="Auto" Height="Auto"></TextBlock>
        <TextBlock Grid.Row="8" Text="Spil" FontSize="60" TextAlignment="Center" HorizontalTextAlignment="Center" Width="Auto" Height="Auto"></TextBlock>
        <TextBlock Grid.Row="9" Text="Log-in" FontSize="60" TextAlignment="Center" HorizontalTextAlignment="Center" Width="Auto" Height="Auto"></TextBlock>

    </Grid>

</Page>

